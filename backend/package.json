{
  "name": "shortlink-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "test": "jest -i",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch --verbose",
    "build": "tsc --build && tsc-alias",
    "start": "node build/index.js",
    "dev": "ts-node-dev --respawn --transpile-only --no-notify -r tsconfig-paths/register src/index.ts",
    "docker:up": "docker build -t shortlink-backend . && docker run --rm -it -p 5500:5500 shortlink-backend",
    "docker:up:silent": "docker build -t shortlink-backend . && docker run -d --rm -it -p 5500:5500 shortlink-backend",
    "docker:down": "docker stop shortlink-backend || true"
  },
  "keywords": [],
  "author": "Sogbesan Timilehin",
  "license": "ISC",
  "description": "Indicina Full Stack Developer Test",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "helmet": "^8.1.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "winston": "^3.17.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.0.0"
  }
}
